<?xml version="1.0" encoding="utf-8" ?>
<NavigationPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class=" EquilibriumApp.Views.Home.CustomNavigationPage"
    BarTextColor="White"
    >
    <NavigationPage.BarBackgroundColor>
        <OnPlatform x:TypeArguments="Color">
           
            <On Platform="iOS" Value="{StaticResource PrimaryColor}"/>
            <On Platform="Android" Value="{StaticResource PrimaryColor}"/>
            <On Platform="UWP" Value="{StaticResource PrimaryColor}" />
        </OnPlatform>
    </NavigationPage.BarBackgroundColor>
</NavigationPage>